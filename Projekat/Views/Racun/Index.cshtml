@model IEnumerable<Projekat.Models.Racun>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BrojFakture)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DatumDospjecaFakture)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PDV)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrimateljRacuna)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StvarateljRacuna)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.BrojFakture)
    </td>
    <td>
        @item.DatumDospjecaFakture.Value.ToShortDateString()
    </td>
    <td>
        @(item.PDV * 100)%
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PrimateljRacuna)
    </td>
    <td>
        @item.CreateDate.Value.ToShortDateString()
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.StvarateljRacuna.Email)
    </td>

    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
